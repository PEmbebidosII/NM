<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.myconpany.nm.pidedatos">

    <TextView
        android:id = "@+id/texto_presup"
        android:text="Introduce un presupuesto inicial: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_title_material"
        android:layout_alignParentStart="false" />

    <EditText
        android:id = "@+id/edit_presup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/texto_presup"
        android:hint="Coloca tu presupuesto dude!"
        android:numeric="decimal" />

    <Button
        android:id = "@+id/boton_guarda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_below="@+id/edit_presup"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mostrar dato guardado"
        android:id="@+id/mostrar_dato"
        android:layout_below="@+id/boton_guarda"
        android:layout_alignRight="@+id/boton_guarda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtView_muestra"
        android:layout_below="@id/mostrar_dato"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/multiTexto"
        android:layout_below="@id/txtView_muestra"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
